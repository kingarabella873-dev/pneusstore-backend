# Environment Variables for Pneus Store Backend
# Copie este arquivo para .env e preencha com seus valores reais

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=production
PORT=10000
API_BASE_URL=https://seu-backend.onrender.com

# ==============================================
# FRONTEND URL (para CORS)
# ==============================================
FRONTEND_URL=https://seu-site.netlify.app

# ==============================================
# DATABASE - MongoDB Atlas
# ==============================================
# Use sua connection string do MongoDB Atlas
# Formato: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://kingarabella873_db_user:NRPbIphfulNVgGIv@pneu-store.og6vpor.mongodb.net/pneus-store?retryWrites=true&w=majority

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Use um valor aleatório e seguro (mínimo 32 caracteres)
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Para Gmail, use "App Password" ao invés da senha normal
# Gere em: https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ==============================================
# PAYMENT CONFIGURATION
# ==============================================

# Mercado Pago (Brasileiro)
# Obtenha em: https://www.mercadopago.com.br/developers/
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Stripe (Opcional - Internacional)
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# PagSeguro (Opcional)
# Obtenha em: https://pagseguro.uol.com.br/
PAGSEGURO_EMAIL=your-pagseguro-email
PAGSEGURO_TOKEN=your-pagseguro-token

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Tamanho máximo em bytes (5MB padrão)
MAX_FILE_SIZE=5242880
# No Render, use /tmp/uploads (sistema de arquivos efêmero)
UPLOAD_DIR=/tmp/uploads

# ==============================================
# RATE LIMITING
# ==============================================
# Janela de tempo em milissegundos (15 minutos)
RATE_LIMIT_WINDOW_MS=900000
# Máximo de requisições por janela
RATE_LIMIT_MAX=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
# URL do frontend (separar múltiplas URLs com vírgula)
CORS_ORIGIN=https://seu-site.netlify.app

# ==============================================
# SECURITY
# ==============================================
# Número de rounds do bcrypt (10-12 recomendado)
BCRYPT_ROUNDS=12

# ==============================================
# LOGGING
# ==============================================
# Níveis: error, warn, info, http, debug
LOG_LEVEL=info

# ==============================================
# CACHE CONFIGURATION (Opcional)
# ==============================================
# Se você adicionar Redis no futuro
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External APIs
CEP_API_URL=https://viacep.com.br/ws
SHIPPING_API_URL=https://api.melhorenvio.com.br

# ==============================================
# ANALYTICS (Opcional)
# ==============================================
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# ==============================================
# DEVELOPMENT/TESTING
# ==============================================
# Não use em produção!
ENABLE_SEED_DATA=false
MOCK_PAYMENTS=false