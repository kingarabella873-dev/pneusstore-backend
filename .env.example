# Environment Variables for Pneus Store Backend

# Server Configuration
NODE_ENV=development
PORT=5001
API_BASE_URL=http://localhost:5001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/pneus-store

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Configuration

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Stripe (optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# PagSeguro (optional)
PAGSEGURO_EMAIL=your-pagseguro-email
PAGSEGURO_TOKEN=your-pagseguro-token

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Cache Configuration (Redis - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External APIs
CEP_API_URL=https://viacep.com.br/ws
SHIPPING_API_URL=https://api.melhorenvio.com.br

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Development/Testing
ENABLE_SEED_DATA=false
MOCK_PAYMENTS=false